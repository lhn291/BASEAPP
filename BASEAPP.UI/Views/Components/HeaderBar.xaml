<UserControl x:Class="BASEAPP.UI.Views.Components.HeaderBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BASEAPP.UI.Views.Components"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="1920">
    <Canvas 
        Background="AliceBlue" 
        Width="1920" 
        Height="100">

        <Button 
            Canvas.Top="15"
            Canvas.Right="15"
            Effect="{StaticResource EffectShadow1}"
            HorizontalAlignment="Left"
            Command="{Binding SearchCommand}"
            Width="70" 
            Height="70"
            FocusVisualStyle="{x:Null}" 
            Style="{DynamicResource OpacityButtonStyle}"
            BorderBrush="Transparent">
            <Button.Background>
                <ImageBrush ImageSource="pack://siteoforigin:,,,/Resources/Images/icon_user.png" Stretch="UniformToFill" />
            </Button.Background>
        </Button>

    </Canvas>
</UserControl>
